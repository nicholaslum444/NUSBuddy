<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nick.nusbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nick.nusbuddy.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nick.nusbuddy.HomePage"
            android:label="@string/title_activity_home_page" >
        </activity>
        <activity
            android:name="com.nick.nusbuddy.Announcements"
            android:label="@string/title_activity_announcements"
            android:parentActivityName="com.nick.nusbuddy.HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nick.nusbuddy.HomePage" />
        </activity>
        <activity
            android:name="com.nick.nusbuddy.Gradebook"
            android:label="@string/title_activity_gradebook" >
        </activity>
        <activity
            android:name="com.nick.nusbuddy.FinalExams"
            android:label="@string/title_activity_final_exams" >
        </activity>
        <activity
            android:name="com.nick.nusbuddy.Homework"
            android:label="@string/title_activity_homework" >
        </activity>
        <activity
            android:name="com.nick.nusbuddy.TestsQuizzes"
            android:label="@string/title_activity_tests_quizzes" >
        </activity>
        <activity
            android:name="com.nick.nusbuddy.CapCalculator"
            android:label="@string/title_activity_cap_calculator" >
        </activity>
    </application>

</manifest>
